@model IEnumerable<NoBull.Models.Blog>

@{
    ViewData["Title"] = "MyBlog";
}

<h1>My Blogs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@foreach (var item in Model)
 {
    <div class="card mb-3">
        <h2 class="card-header text-white bg-primary">@Html.DisplayFor(modelItem => item.Title)</h2>
        <div class="card-body">
            <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
        </div>

        <div class="card-body">
            <p class="card-text">@Html.DisplayFor(modelItem => item.CreateDateTime)</p>
        </div>

        <div class="card-footer text-muted">
            <p class="card-text">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </p>
        </div>
    </div>
 }

